#lets go
import maya.cmds as cmds
import math
import random

#citygenerator
#god im so happpy i get to do this on linux

cmds.select (all=True)
cmds.delete ()
#forin

numIterationsX = 10
numIterationsZ = 10
buildingPhaseX = 10
buildingPhaseZ = 10
streetWidthX = 2
streetWidthZ = 2


for iterationZ in range(numIterationsZ):
    for iterationX in range(numIterationsX):
        #define vars
        myBuildingBaseWidthRand = random.random()
        myBuildingBaseWidthRandAdjusted = myBuildingBaseWidthRand + 7
        myBuildingBaseDepthRand = random.random()
        myBuildingBaseDepthRandAdjusted = myBuildingBaseDepthRand + 7
        myBuildingBaseHeightRand = random.random()
        myBuildingBaseHeightRandAdjusted = myBuildingBaseHeightRand * 2 + 2
        myBuildingBaseHeightCenter = myBuildingBaseHeightAdjusted * 0.5

        myBuildingSpireWidthRand = random.random()
        myBuildingSpireWidthRandAdjusted = myBuildingSpireWidthRand * 1.5 + 5
        myBuildingSpireDepthRand = random.random()
        myBuildingSpireDepthRandAdjusted = myBuildingSpireDepthRand * 1.5 + 5
        myBuildingSpireHeightRand = random.random()
        myBuildingSpireHeightRandAdjusted = myBuildingSpireHeightRand * 20 + 10



        #create geo
        #mybuildingbase

        myBuildingBase = cmds.polyCube( w=3, h=1, d=3, sx=2, sy=1, sz=2, ax=[0,1,0], cuv=1, ch=True)
        #spire
        myBuildingSpire = cmds.polyCube( w=2, h=6, d=2, sx=2, sy=1, sz=2, ax=[0,1,0], cuv=2, ch=True)
        #create shaders
        myBaseShader = cmds.shadingNode('aiStandardSurface', asShader= True)
        mySpireShader = cmds.shadingNode('aiStandardSurface', asShader= True)
        #assign shaders to geo
        cmds.select(myBuildingBase)
        cmds.hyperShade(assign=myBaseShader)
        cmds.select(myBuildingSpire)
        cmds.hyperShade(assign=mySpireShader)
        #adjustments to geo
        cmds.select(myBuildingBase)
        cmds.move(iterationX * 10, myBuildingBaseHeightCenter, iterationZ * 10)
        cmds.select(myBuildingSpire)
        cmds.move(0,0,0)